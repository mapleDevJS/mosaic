{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "typeRoots": ["src/@types", "./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "caComponents/*": ["src/components/*"],
            "caStore/*": ["src/store/*"],
            "caMocks/*": ["src/mocks/*"],
            "caTypes/*": ["src/@types/*"],
            "caLogics/*": ["src/logics/*"],
            "caDucks/*": ["src/ducks/*"],
            "caApi/*": ["src/api/*"],
            "caAssets/*": ["src/assets/*"],
            "caScreens/*": ["src/screens/*"],
            "caCommonStyles/*": ["src/commonStyles/*"]
        }
    },
    "include": ["src", "src/@types"]
}
